<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <form class="form edit-comment-form">
      <div class="form-group">
        <label for="edit-name">Type edited name:</label>
        <input class="form-input" type="text" id="edit-name" name="edit-name" />
      </div>
      <div class="form-group">
        <label for="edit-desc">Type edited description:</label>
        <textarea class="form-input" id="edit-desc" name="edit-desc"></textarea>
        <input id="hiddenBlogId" hidden="true" value="{{id}}"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </p>
</div>

<script src="/js/postOwner.js"></script>

