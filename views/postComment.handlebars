<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <br>
   <p>Comments:</p>
  {{#each comments as |comment|}}
  <section class="card">
    <div class="card-body">
      <p class="card-text">{{description}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
  </section>
  {{/each}}

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-desc">Add a comment:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      <input id="hiddenBlogId" hidden="true" value="{{id}}"></input>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
<script src="/js/postComment.js"></script>